<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/rounded_rectangle_all_corners_transparent"
        android:padding="6sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_view_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:padding="7dp"
            android:text="Nr"
            android:textColor="@color/purple"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/text_view_nr"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_medium"
            android:maxLines="1"
            android:text="Line 1"
            android:textColor="@color/purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text_view_nr"
            android:fontFamily="@font/raleway_medium"
            android:paddingLeft="2dp"
            android:text="Line 2"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/baloo"
            android:text="HH"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_sp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/text_view_3"
            android:layout_toRightOf="@id/text_view_3"
            android:fontFamily="@font/baloo"
            android:text=":"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/text_view_sp1"
            android:layout_toRightOf="@id/text_view_sp1"
            android:fontFamily="@font/baloo"
            android:text="MM"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/text_view_33"
            android:layout_toRightOf="@id/text_view_33"
            android:fontFamily="@font/baloo"
            android:text="-"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/text_view_to"
            android:layout_toRightOf="@id/text_view_to"
            android:fontFamily="@font/baloo"
            android:text="HH"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_sp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/text_view_55"
            android:layout_toRightOf="@id/text_view_55"
            android:fontFamily="@font/baloo"
            android:text=":"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/text_view_sp2"
            android:layout_toRightOf="@id/text_view_sp2"
            android:fontFamily="@font/baloo"
            android:text="MM"
            android:textColor="@color/purple"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>