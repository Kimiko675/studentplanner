<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/white_solid"
        android:padding="8sp">

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:text="Line"
            android:textColor="@color/purple"
            android:textSize="25dp"
            android:textStyle="bold" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="200dp"
                    android:paddingTop="3dp"
                    android:text="Liczba zajęć: "
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/day_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:layout_toEndOf="@id/text1"
                    android:paddingTop="3dp"
                    android:text="Line"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/zaj1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="200dp"
                    android:paddingTop="21dp"
                    android:text="Pierwsze zajęcia: "
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/hour1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text="0"
                    android:paddingTop="21dp"
                    android:layout_toEndOf="@id/zaj1"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/kropki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text=":"
                    android:paddingTop="21dp"
                    android:layout_toEndOf="@id/hour1"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/minute1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text="0"
                    android:paddingTop="21dp"
                    android:layout_toEndOf="@id/kropki"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

        <TextView
            android:id="@+id/zaj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:paddingLeft="200dp"
            android:paddingTop="38dp"
            android:text="Ostatnie zajęcia: "
            android:textColor="@color/purple"
            android:textSize="14dp" />

            <TextView
            android:id="@+id/hour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="0"
            android:paddingTop="38dp"
            android:layout_toEndOf="@id/zaj2"
            android:textColor="@color/purple"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/kropki2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text=":"
            android:paddingTop="38dp"
            android:layout_toEndOf="@id/hour2"
            android:textColor="@color/purple"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/minute2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="0"
            android:paddingTop="38dp"
            android:layout_toEndOf="@id/kropki2"
            android:textColor="@color/purple"
            android:textSize="14dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>