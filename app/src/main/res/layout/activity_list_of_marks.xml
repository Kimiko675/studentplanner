<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfMarks"
    android:background="@drawable/gradient_bg">
    >


    <TextView
        android:id="@+id/textView2Mark"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_bottom"

        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:text="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3Mark"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Åšrednia ocen:"
        android:textColor="?android:attr/textColorTertiaryInverse"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/llSubjectsMark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp">

    </TextView>

    <TextView
        android:id="@+id/textView4Mark"
        android:layout_width="261dp"
        android:layout_height="54dp"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Brak wszystkich ocen"
        android:textColor="?android:attr/textColorTertiaryInverse"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/llSubjectsMark"
        app:layout_constraintLeft_toRightOf="@+id/textView3Mark"
        tools:ignore="MissingConstraints">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/llSubjectsMark"
        android:layout_width="410dp"
        android:layout_height="577dp"
        android:layout_marginTop="80dp"
        android:clipToPadding="false"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>